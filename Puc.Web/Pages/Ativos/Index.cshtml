@model Puc.Web.Pages.Ativos.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="h-100 p-5 pb-2 pt-2 bg-light border rounded-3">
    <div class="container-fluid py-5">
        <h2 class="fw-bold">Gestão de Ativos de TI</h2>
        <p class="col-md-8 fs-5">Cadastre, gerencie e organize os ativos disponíveis na organização.</p>
        <a asp-page="Create" class="btn btn-outline-secondary btn-lg" type="button">Cadastrar Ativo</a>
    </div>
</div>

<section class="text-center container">
    <div class="row py-lg-5">
        <div class="d-flex align-items-start">
            <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <button class="nav-link  active" id="v-pills-Computadores-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Computadores" type="button" role="tab" aria-controls="v-pills-Computadores" aria-selected="true">Computadores</button>
                <button class="nav-link" id="v-pills-Impressoras-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Impressoras" type="button" role="tab" aria-controls="v-pills-Impressoras" aria-selected="false">Impressoras</button>
                <button class="nav-link" id="v-pills-Monitores-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Monitores" type="button" role="tab" aria-controls="v-pills-Monitores" aria-selected="false">Monitores</button>
                <button class="nav-link" id="v-pills-Perifericos-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Perifericos" type="button" role="tab" aria-controls="v-pills-Perifericos" aria-selected="false">Perifericos</button>
                <button class="nav-link" id="v-pills-Escritório-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Escritório" type="button" role="tab" aria-controls="v-pills-Escritório" aria-selected="false">Escritório</button>
                <button class="nav-link" id="v-pills-Redes-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Redes" type="button" role="tab" aria-controls="v-pills-Redes" aria-selected="false">Redes</button>
            </div>
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-Computadores" role="tabpanel" aria-labelledby="v-pills-Computadores-tab">
                    <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
                        @foreach (var item in Model.Ativo.Where(x => x.Categoria == Entities.Categoria.Computadores))
                        {
                            <div class="col">
                                <div class="card" style="width: 18rem; text-align: start;">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Nome</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">@item.Responsavel</h6>
                                        <p class="badge bg-dark">@item.Status</p>
                                        <br/>
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="card-link"><i class="fa-solid fa-pencil"></i></a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="card-link link-danger"><i class="fa-solid fa-trash-can"></i></a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    @if (!Model.Ativo.Any(x => x.Categoria == Entities.Categoria.Computadores))
                    {
                        <div class="row p-4">
                            <p><footer class="blockquote-footer">Nenhum item cadastrado para essa categoria.</footer></p>
                        </div>
                    }
                </div>
                <div class="tab-pane fade" id="v-pills-Impressoras" role="tabpanel" aria-labelledby="v-pills-Impressoras-tab">
